{
  "name": "next-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev & yarn css:types-watch",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "css:types-watch": "tcm --watch ./src",
    "db:generate": "drizzle-kit generate:pg --out migrations-folder --schema src/schema.ts",
    "db:migrate": "node ./migrate.js",
    "db:init": "yarn db:generate && yarn db:migrate",
    "storybook": "storybook dev -p 6006 & yarn css:types-watch",
    "build-storybook": "storybook build",
    "prepare": "husky install",
    "postinstall": "husky install && yarn test:e2e:install",
    "test": "yarn test:unit:ci & wait; yarn test:e2e",
    "test:unit": "jest --watch",
    "test:unit:ci": "jest --ci",
    "test:e2e": "playwright test",
    "test:e2e:install": "npx playwright install --with-deps"
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@as-integrations/next": "^2.0.0",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "drizzle-orm": "^0.26.5",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.5",
    "graphql": "^16.6.0",
    "next": "13.4.5",
    "next-auth": "^4.22.1",
    "postgres": "^3.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@storybook/addon-docs": "^7.0.21",
    "@storybook/addon-essentials": "^7.0.21",
    "@storybook/addon-interactions": "^7.0.21",
    "@storybook/addon-links": "^7.0.21",
    "@storybook/blocks": "^7.0.21",
    "@storybook/nextjs": "^7.0.21",
    "@storybook/react": "^7.0.21",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/uuid": "^9.0.2",
    "drizzle-kit": "^0.18.1",
    "eslint-plugin-storybook": "^0.6.12",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "storybook": "^7.0.21",
    "typed-css-modules": "^0.7.2"
  }
}
